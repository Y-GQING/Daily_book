package integertest;

public class IntegerTest {

	public static void main(String[] args) {
		// TODO 自动生成的方法存根

		Integer  i1  = new  Integer(10);
		int  i2  = i1.intValue();
		System.out.println(i2+1);  //11
		
		int age =   Integer.parseInt("25");
		System.out.println(age+1);
		
		
		double  price  = Double.parseDouble("3.0");
		System.out.println(price+1.0);  // 4.0
		// 将int类型的十进制转换为二进制
		String  s1  =  Integer.toBinaryString(10);
		System.out.println(s1);  // 1010
		//将int类型的十进制转换为十六进制
		String  s2 =  Integer.toHexString(10);
		System.out.println(s2);   //a
		//将int类型的十进制转换为八进制
		String  s3 = Integer.toOctalString(10);
		System.out.println(s3);  //12
		//将int转换为Integer
		Integer  i3  =  Integer.valueOf(10);
		//String转换为Integer
		Integer  i4 = Integer.valueOf("10");
		System.out.println(i3);
		System.out.println(i4);	
		
	}

}

//程序在第七行使用integer类中的parseInt()方法将一个数值字符串转换为一个int值。第10行使用Double类中的parseDouble（）方法将一个数值字符串转换为一个double值。
//第12~20行使用数值包类中的重载方法，将int类型的十进制分别转换为二进制，十六进制和八进制。
//
//
